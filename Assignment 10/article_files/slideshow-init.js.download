jQuery(function ($) {
    var opts = {
        auto: false,
        fullScreen: false,
        swipe: true
    };
    makeBSS('.paragraphs-item-embedded-photo-gallery', opts);

    var count = $(".company-profile-youtube-videos .field-name-field-company-youtube-video .field-items").children().length;
    if (count > 1) {
        makeBSS('.company-profile-youtube-videos .field-name-field-company-youtube-video', opts);
    }
    $('img', '.paragraphs-item-embedded-photo-gallery .field-item').each(function() {
        var $this = $(this);
        var caption = $this.attr('title');
        if (caption) {
            $this.parent().append('<div class="pod-text-container"><figcaption>' + caption + '</figcaption></div>');
        }
    });
});